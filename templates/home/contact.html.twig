{% extends 'form-base.html.twig' %}

{% block title %}Jobster Portal - Contact Us{% endblock %}
{% block body %}

  {% for message in app.flashes('success') %}
    <div class="alert alert-success txt-small">{{ message }}</div>
  {% endfor %}

  {% for message in app.flashes('error') %}
    <div class="alert alert-danger txt-small">{{ message }}</div>
  {% endfor %}
  {{ form_start(form, {'attr': {'class': 'default-form'},'method': 'POST'}) }}
  <div class = "row">
    <!-- Input -->
    <div class = "form-group col-lg-6 col-md-12">
      {{ form_label(form.fullName) }}
      {{ form_widget(form.fullName, {'attr': {}}) }}
      {{ form_errors(form.fullName) }}
    </div>
    <div class = "form-group col-lg-6 col-md-12">
      {{ form_label(form.emailAddress) }}
      {{ form_widget(form.emailAddress, {'attr': {}}) }}
      {{ form_errors(form.emailAddress) }}
    </div>
    <div class = "form-group col-lg-12 col-md-12">
      {{ form_label(form.subject) }}
      {{ form_widget(form.subject, {'attr': {}}) }}
      {{ form_errors(form.subject) }}
    </div>
    <div class = "form-group col-lg-12 col-md-12">
      {{ form_label(form.message) }}
      {{ form_widget(form.message, {'attr': {}}) }}
      {{ form_errors(form.message) }}
    </div>
  </div>
  <div    class = "form-group col-lg-12 col-md-12">
    <button class = "theme-btn btn-style-one" type = "submit">Submit</button>
  </div>
  {{ form_end(form) }}
{% endblock %}