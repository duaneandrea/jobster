{% extends 'form-base.html.twig' %}

{% block title %}Jobster Portal - {{ profile.firstName }} {{ profile.lastName }}{% endblock %}
{% block stylesheets %}
{% endblock %}
{% block body %}

{% if response|length > 0 %}
	{% if response.res == false %}
		<div class="alert alert-danger  txt-small">{{ response.msg }}</div>
	{% else %}
		<div class="alert alert-success  txt-small">{{ response.msg }}</div>
	{% endif %}
{% endif %}
{{ form_start(form, {'attr': {'class': 'default-form'}}) }}
<div class="row">
	<!-- Input -->
	<div class="form-group col-lg-6 col-md-12">
		{{ form_label(form.firstName) }}
		{{ form_widget(form.firstName, {'attr': {}}) }}
		{{ form_errors(form.firstName) }}
	</div>

	<!-- Input -->
	<div class="form-group col-lg-6 col-md-12">
		{{ form_label(form.lastName) }}
		{{ form_widget(form.lastName, {'attr': {}}) }}
		{{ form_errors(form.lastName) }}
	</div>

	<!-- Input -->
	<div class="form-group col-lg-6 col-md-12">
		{{ form_label(form.cellNumber) }}
		{{ form_widget(form.cellNumber, {'attr': {}}) }}
		{{ form_errors(form.cellNumber) }}
	</div>
	<!-- Input -->
	<div class="form-group col-lg-6 col-md-12">
		{{ form_label(form.whatsApp) }}
		{{ form_widget(form.whatsApp, {'attr': {}}) }}
		{{ form_errors(form.whatsApp) }}
	</div>
	<div class="form-group col-lg-12 col-md-12">
		{{ form_label(form.houseAddress) }}
		{{ form_widget(form.houseAddress, {'attr': {'rows':'4'}}) }}
		{{ form_errors(form.houseAddress) }}
	</div>
	<div class="form-group col-lg-12 col-md-12">
		{{ form_label(form.userBio) }}
		{{ form_widget(form.userBio, {'attr': {'rows':'4'}}) }}
		{{ form_errors(form.userBio) }}
	</div>
	<div class="form-group col-lg-6 col-md-6">
		{{ form_label(form.gender) }}
		{{ form_widget(form.gender, {'attr': {}}) }}
		{{ form_errors(form.gender) }}
	</div>

	<div class="form-group col-lg-6 col-md-6">
		{{ form_label(form.language) }}
		{{ form_widget(form.language, {'attr': {}}) }}
		{{ form_errors(form.language) }}
	</div>
	<div class="form-group col-lg-6 col-md-6">
		{{ form_label(form.countryId) }}
		{{ form_widget(form.countryId, {'attr': {}}) }}
		{{ form_errors(form.countryId) }}
	</div>
</div>
<div class="form-group col-lg-12 col-md-12">
	<button class="theme-btn btn-style-one" type="submit">Update Profile</button>
</div>
{{ form_end(form) }}

{% endblock %}
