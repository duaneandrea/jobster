{% extends 'base.html.twig' %}

{% block title %}Jobster Portal - Change Password{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2"></div> <!-- Empty column on the left -->
            <div class="col-md-8 top-space">
                <!-- Dashboard -->
                <section class="user-dashboard">
                    <div class="dashboard-outer">
                        <div class="row">
                            <div class="col-lg-12">
                                <!-- Ls widget -->
                                <div class="ls-widget">
                                    <div class="tabs-box">
                                        <div class="widget-title">
                                            <h4>My Profile</h4>
                                        </div>
                                        <div class="widget-content">
                                            {% if response|length > 0 %}
                                                {% if response.res == false %}
                                                    <div class="alert alert-danger  txt-small">{{ response.msg }}</div>
                                                {% else %}
                                                    <div class="alert alert-success  txt-small">{{ response.msg }}</div>
                                                {% endif %}
                                            {% endif %}
                                            {{ form_start(form, {'attr': {'class': 'default-form'}}) }}
                                            <div class="row">
                                                <!-- Input -->
                                                <div class="form-group col-lg-6 col-md-12">
                                                    {{ form_label(form.currentPassword) }}
                                                    {{ form_widget(form.currentPassword, {'attr': {}}) }}
                                                    {{ form_errors(form.currentPassword) }}
                                                </div>
                                                <div class="form-group col-lg-6 col-md-12"></div>
                                                <div class="form-group col-lg-6 col-md-12">
                                                    {{ form_label(form.newPassword) }}
                                                    {{ form_widget(form.newPassword, {'attr': {}}) }}
                                                    {{ form_errors(form.newPassword) }}
                                                </div>
                                                <div class="form-group col-lg-6 col-md-12">
                                                    {{ form_label(form.conNewPassword) }}
                                                    {{ form_widget(form.conNewPassword, {'attr': {}}) }}
                                                    {{ form_errors(form.conNewPassword) }}
                                                </div>
                                            </div>
                                            <div class="form-group col-lg-12 col-md-12">
                                                <button class="theme-btn btn-style-one" type="submit">Update Password</button>
                                            </div>
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-md-2"></div> <!-- Empty column on the right -->
        </div>
    </div>
{% endblock %}